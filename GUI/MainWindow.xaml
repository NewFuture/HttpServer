<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="28.865" LastChildFill="False" VerticalAlignment="Top" Width="517">
            <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Width="71.362" Height="28.865" HorizontalAlignment="Left" FontSize="14"><Run Text="服务端口"/><Run Text=":"/></TextBlock>
            <TextBox x:Name="PortText" HorizontalAlignment="Left" Height="28.865" TextWrapping="Wrap" Text="1122" Width="51.738" FontSize="14"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Height="26.383" Width="47.197" Margin="0,2.482,0,0" FontSize="14"><Run Text="目录"/><Run Text=":"/></TextBlock>
            <TextBox x:Name="FolderText" Height="28.865" TextWrapping="Wrap" Text="./" Width="179.333" HorizontalAlignment="Left" FontSize="14"/>
            <Button x:Name="FolderButton" Content="选择文件夹" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="28.865" Click="FolderButton_Click"/>
            <Button x:Name="RunButton" Content="RUN" Height="28.865" VerticalAlignment="Top" Width="75" Click="RunButton_Click"/>
        </DockPanel>

    </Grid>
</Window>
