<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="HTTPServer" Height="411" Width="569.744">
    <Grid Margin="0,0,2,-1">
        <TextBlock x:Name="port" TextWrapping="Wrap" Width="72" HorizontalAlignment="Left" FontSize="15" Margin="10,16,374,269" FontWeight="Bold"><Run Text="服务端口:"/></TextBlock>
        <TextBox x:Name="PortText" HorizontalAlignment="Left"  VerticalAlignment="Top" TextWrapping="Wrap" Text="1122" Width="46" Height="28" FontSize="15"  Margin="91,15,0,276"/>
        <TextBlock x:Name="directory" HorizontalAlignment="Left" TextWrapping="Wrap" Width="72" Margin="10,59,0,267" FontSize="15" FontWeight="Bold"><Run Text="服务目录:"/></TextBlock>
        <TextBox x:Name="FolderText" TextWrapping="Wrap" Text=".\" Width="362" Height="26" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="15" Margin="91,58,0,0"/>
        <Button x:Name="FolderButton" Content="选择文件夹" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Height="26" Click="FolderButton_Click" Margin="472,58,0,0"/>
        <Button x:Name="RunButton" Content="RUN" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Click="RunButton_Click" Margin="472,16,0,0" Width="74"/>
        <CheckBox x:Name="log" Content="日志输出" HorizontalAlignment="Left" Margin="231,147,0,0" VerticalAlignment="Top" Height="22" Width="98" FontSize="15" FontWeight="Bold" IsChecked="True"/>
        <CheckBox x:Name="directoryList" Content="列出目录" HorizontalAlignment="Left" Margin="10,147,0,0" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Checked="directoryList_Checked" IsChecked="True"/>
        <CheckBox x:Name="HTTPS" Content="HTTPS" HorizontalAlignment="Left" Margin="476,147,0,0" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Checked="https_Checked"/>
        <TextBox x:Name="LogText" HorizontalAlignment="Left" Height="171" Margin="10,178,0,0" TextWrapping="Wrap" Text="输出：" VerticalAlignment="Top" Width="540" TextChanged="LogText_TextChanged"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,102,0,0" TextWrapping="Wrap" Text="证书:" VerticalAlignment="Top" FontWeight="Bold" FontSize="15" Height="26" Width="52"/>
        <TextBox x:Name="keyText" HorizontalAlignment="Left" Height="26" Margin="91,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="362"/>
        <Button x:Name="button" Content="选择证书" HorizontalAlignment="Left" Margin="472,102,0,0" VerticalAlignment="Top" Width="74" Height="26" Click="KeyButton_Click"/>

    </Grid>
</Window>
